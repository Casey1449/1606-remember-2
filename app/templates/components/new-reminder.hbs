
<form {{action "createReminder" on="submit"}}>
  <h2>Create New Reminder</h2>
  {{ input value=title class="reminder-title-input" placeholder="Insert Title" }} <br>
  {{ input value=date type="date" class="reminder-date-input" placeholder="Insert Date" }} <br>
  {{ input value=notes class="reminder-notes-input" placeholder="Insert Note" }} <br>
  <button class="reminder-submit-button">Submit New Reminder</button>
</form>
