  {{#with model as |reminder| }}
  <h2 class="spec-reminder-title">{{reminder.title}}</h2>
  <p class="reminder-detail-date">{{reminder.date}}</p>
  <p >{{reminder.notes}}</p>
  {{#link-to "reminder-list.edit-item" reminder}}
